@model IEnumerable<WebMySQL.Models.Usuario>



@{
    ViewData["Title"] = "Lista de Usuarios";
   
}

<h1>Lista de Usuarios</h1>

<p>
    
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DTN_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DTN_DESTINATION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                <form asp-controller="Usuarios" asp-action="Index">
                    
                    <input type="text" name="SearchString" placeholder="DTN_ID ou DTN_DESTINATION"/>
                    <input type="submit" value="Buscar" class="btn btn-primary"/>
                    
                    
                </form>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DTN_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DTN_DESTINATION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light">Detalhar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>   
            </td>
            
        </tr>
        
    }       
    </tbody>  
    <div class="table-responsive">
        <table width="28% ">
            <tr>
                <td>
                    <a asp-action="Create" class="btn btn-primary" >Adicionar</a> 
                </td>
                <td >
                
                    @using (Html.BeginForm("Exportar", "Usuarios", FormMethod.Post))
                    {
                        <input class="btn btn-success" type="submit" id="btnSubmit" value="Salvar CSV" />
                        
                    }
                </td>
            </tr>
        </table>        
   </div>
    
    
</table>

